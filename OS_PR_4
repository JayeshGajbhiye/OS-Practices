#include <stdio.h>
#include <unistd.h>
#include <sys/types.h>

int main() {
    pid_t pid;

    pid = fork();

    if (pid > 0) {
        printf("Parent Process\n");
        printf("Parent PID: %d\n", getpid());
        sleep(2);
        printf("Parent exiting...\n");
    }
    else if (pid == 0) {
        sleep(5);
        printf("\nChild Process\n");
        printf("Child PID: %d\n", getpid());
        printf("Child Parent PID (PPID): %d\n", getppid());
    }
    else {
        printf("Fork failed!\n");
    }

    return 0;
}
